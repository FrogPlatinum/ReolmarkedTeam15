<Page x:Class="ReolmarkedTeam15.Views.ProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReolmarkedTeam15.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      
      FontFamily="Segoe UI"
      FontSize="14"
      
      Title="ProductView">

    
    <!--Bruger farver fra "Combination #249" https://colors.elwyn.co/-->
    <Grid Background="#547076">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="830"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="800"/>
        </Grid.RowDefinitions>

        <!-- Liste overskrift-->
        <Label Grid.Column="0" Grid.Row="0" Content="Liste over varer og deres informationer" Foreground="White" Margin="5,0,0,0"/>

        <!-- Liste i Datagrid-->
        <DataGrid Grid.Column="0" Grid.Row="1" Background="#547076" ItemsSource="{Binding Products}" Margin="5,0,0,0" AutoGenerateColumns="False" BorderBrush="Transparent">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Reol" Binding="{Binding ProductStallID }" Width="1.5*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Vare ID" Binding="{Binding ProductID }" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Navn" Binding="{Binding ProductName }" Width="6*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Beskrivelse" Binding="{Binding ProductDescription }" Width="14*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Pris (DKK)" Binding="{Binding Price }" Width="3*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Købsstatus" Binding="{Binding PurchaseStatus }" Width="3*" IsReadOnly="True"/>
                

            </DataGrid.Columns>

        </DataGrid>

        <!-- Rediger Varer overskrift-->
        <Label Grid.Column="1" Grid.Row="0" Content="Rediger Varer" Margin="5,0,0,0" Foreground="White"/>

        <!-- Knapper til redigering af Varer.-->
        <Button Grid.Column="1" Grid.Row="1" Margin="10,0,0,0" Content="Tilføj Vare" Height="26" VerticalAlignment="Top" FontWeight="SemiBold" Click="AddProduct_Click"/>


    </Grid>
</Page>
