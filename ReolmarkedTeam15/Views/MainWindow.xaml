<Window x:Class="ReolmarkedTeam15.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolmarkedTeam15.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Background="#f5ecc2" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" Orientation="Horizontal" Height="30">

            <Button Name="Button" Content="Forside (Hvid)" Height="25" Width="100" Margin="10,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="FrontPageView_Click"/>
                
                <Button Name="Button1" Content="Reoler (Grøn)" Height="25" Width="100" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ShowStallView_Click"/>
                
                <Button Name="Button2" Content="IngenFunktion" Height="25" Width="100" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <Frame Grid.Row="1" Grid.Column="0" x:Name="MainFrame" Margin="0,0,0,0" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            
     
                   

    </Grid>
</Window>
