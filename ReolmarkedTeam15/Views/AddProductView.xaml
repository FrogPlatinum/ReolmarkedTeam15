<Window x:Class="ReolmarkedTeam15.Views.AddProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolmarkedTeam15.Views"
       
        mc:Ignorable="d"
        Title="" Height="280" Width="400">

    <!--Bruger farver fra "Combination #249" https://colors.elwyn.co/-->
   
    <Grid Background="#d6b43e">

        <!--Her viser vi hvor mange rækker der skal være og hvor store de er-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <!--Her viser vi hvor mange kolonner der skal være og hvor store de er-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Overskrit her-->
        <Label Grid.Row="0" Content="Tilføj Vare til Reol" Grid.ColumnSpan="2" Foreground="#547076" FontWeight="Bold" FontSize="16"/>

        <!--Seperator her-->
        <Separator Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,5" Background="#CCCCCC" Height="1"/>

        <!--Navn TextBlock (Column 0) + TextBox (Column 1)-->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,0,0,10" Text="Navn:" FontSize="16"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,50,10" FontSize="16" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Beskrivelse (Valgfri) TextBlock (Column 0) + TextBox (Column 1)-->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,0,0,10" Text="Beskrivelse:" FontSize="16"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,50,10" FontSize="16" Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Pris TextBlock (Column 0) + TextBox (Column 1)-->
        <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,0,0,10" Text="Pris (DKK):" FontSize="16"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,50,10" FontSize="16" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Reol TextBlock (Column 0) + ComboBox (Column 1) (forbundet med ID men viser Placering?)-->
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="5,0,0,10" Text="Reol:" FontSize="16"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Margin="0,0,50,10" FontSize="16" Text="{Binding ProductStallID, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Seperator her-->
        <Separator Grid.Row="6" Grid.ColumnSpan="2" Margin="0,0,0,5" Background="#CCCCCC" Height="1"/>

        <!--Knapper her-->
        <!-- "Tilføj" Knap: -->
        <Button Grid.Row="7" Grid.Column="1" Margin="-215,0,0,0" Width="50" Content="Tilføj" FontWeight="Bold" FontSize="12"
                Command="{Binding AddProductCommand}"/>
        <!-- Hvis vi skal have en "Ryd" knap: -->
        <Button Grid.Row="7" Grid.Column="1" Margin="112,0,0,0" Width="50" Content="Ryd" Foreground="#793327" FontWeight="Bold" FontSize="12"
                Command="{Binding ClearFieldsCommand}"/>

    </Grid>
</Window>
